<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
    crossorigin="anonymous"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />

  <!-- for github -->

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


  <!-- Custom CSS + Fonts -->
  <link rel="stylesheet" href="/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet" />
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/logo.png" alt="Paul Kniaz Logo" height="50" class="me-2">
        <span>Paul Kniaz Portfolio</span>
      </a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="portfolioDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Portfolio
            </a>
            <ul class="dropdown-menu" aria-labelledby="portfolioDropdown">
              <li><a class="dropdown-item" href="coding-projects">Coding</a></li>
              <li><a class="dropdown-item" href="websites">Website Creation</a></li>
              <li><a class="dropdown-item" href="ux-design">UX-Design</a></li>
              <li><a class="dropdown-item" href="/blog">News and Blog</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <%- body %>
  </div>

  <!-- Footer -->
  <footer class="bg-light mt-5 pt-4 pb-5">
    <div class="container text-center">
      <!-- Go Back button -->
      <div class="text-start mb-3">
        <button id="go-back-btn" onclick="goBack()" class="btn btn-secondary">
          ← Go Back
        </button>
      </div>

      <!-- Centered Contact Row -->
      <div class="d-flex justify-content-center align-items-center gap-5 flex-wrap mb-5">
        <a href="mailto:pjkniaz@gmail.com">
          <img src="/images/email.png" alt="Email Icon" class="footer-icon" />
        </a>
        <img
          src="/images/me_alaska.jpg"
          class="footer-photo img-fluid rounded shadow"
          style="max-width: 250px;"
          alt="Paul Kniaz"
          loading="lazy"
        />
          <a href="https://github.com/eslteacher902010" target="_blank">
            <i class="fab fa-github" style="font-size: 64px; color: #333;"></i>
          </a>

        <a
          href="https://www.linkedin.com/in/paul-kniaz-59014876/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src="/images/linkedin.png" alt="LinkedIn Icon" class="footer-icon" />
        </a>
      </div>

      <div class="footer-name mb-2">Paul Kniaz</div>
      <p class="text-muted small">© 2025 Paul Kniaz</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
    crossorigin="anonymous"
  ></script>

  <!-- Go Back Script -->
  <script>
    function goBack() {
      if (document.referrer && document.referrer !== window.location.href) {
        window.location = document.referrer;
      } else {
        window.location = "/";
      }
    }

    if (window.location.pathname === "/" || window.location.pathname === "/index.html") {
      const backBtn = document.getElementById("go-back-btn");
      if (backBtn) {
        backBtn.classList.add("d-none");
      }
    }
  </script>
</body>
</html>
